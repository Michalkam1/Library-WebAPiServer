
@{
    ViewData["Title"] = "EnterData";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Add a Item</title>
</head>
<body>

    <form method="post">
        <fieldset>
            <legend>Informacje</legend>
            <div class="form-group">
                <label for="Title">Tytuł:</label>
                <input type="text" class="form-control" name="Title" value="Tytuł" />
            </div>

            <div class="form-group">
                <label for="IssueYear">Rok</label>
                <input type="text" class="form-control" name="IssueYear" value="Rok" />
            </div>

            <div class="form-group">
                <label for="ItemType">Nośnik:</label>
                <input type="text" class="form-control" name="ItemType" value="Książka" />
            </div>

            <div class="form-group">
                <label for="Author">Autor:</label>
                <input type="text" class="form-control" name="Author" value="Autor" />
            </div>

            <div class="form-group">
                <label for="Cover">Okładka:</label>
                <input type="text" class="form-control" name="Cover" value="Okładka" />
            </div>

            <p><input type="submit" class="btn btn-primary" name="buttonSubmit" value="Dodaj Element" /></p>

</fieldset>
    </form>
</body>
</html>

