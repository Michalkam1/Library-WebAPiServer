@model LibraryItemViewModel;

@{
    ViewData["Title"] = "Wrowadź dane";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Dodaj element do biblioteki</title>
</head>
<body>

    <form asp-action="SaveLibraryItem" method="post">
        <fieldset>
            <legend>Informacje</legend>
            <div class="form-group">
                <label for="Title">Tytuł:</label>
                <input type="text" class="form-control" name="Title" placeholder="Tytuł" value="@Model.Title" />
            </div>

            <div class="form-group">
                <label for="Author">Imię autora:</label><br />
                @*@Html.DropDownList("AuthorsViewBag", (IEnumerable<SelectListItem>)ViewBag.AuthorsViewBag, null, new { @class = "form-control" })*@
                @*@Html.DropDownList("AuthorsViewBag", ViewBag.AuthorsViewBag as SelectList);*@
                @Html.DropDownListFor(m => m.Author.Id, new SelectList((IEnumerable<SelectListItem>)ViewBag.AuthorsViewBag, "Value", "Text"))
            </div>

    <div class="form-group">
        <label for="IssueYear">Data wydania</label>
        <input type="date" class="form-control" name="IssueYear" placeholder="Rok" value="@Model.IssueYear" />
    </div>

    @*<div class="form-group">
            <label for="ItemType">Nośnik:</label>
            <input type="text" class="form-control" name="ItemType" placeholder="np: Książka" />
        </div>*@

    @*<div class="form-group">
            <label for="Cover">Okładka:</label>
            <input type="text" class="form-control" name="Cover" placeholder="Okładka" />
        </div>*@

    <p><input type="submit" class="btn btn-primary" name="buttonSubmit" value="Dodaj Element" /></p>

</fieldset>
    </form>
</body>
</html>

