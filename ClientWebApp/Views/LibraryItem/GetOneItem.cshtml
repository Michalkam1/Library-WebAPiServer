@model LibraryItemViewModel;

@{
    ViewData["Title"] = "Wprowadzona pozycja";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Element w bibliotece</title>
</head>
<body>
    <form asp-action="SaveLibraryItem" method="post">
        <fieldset>
            <legend>Informacje</legend>
            <div class="form-group">
                <label for="Title">Tytuł:</label><br />
                <label>@Model.Title</label>
            </div>

            <div class="form-group">
                <label for="Author">Imię autora:</label><br />
                <label>@Model.Author.FirstName @Model.Author.LastName</label>
            </div>

            <div class="form-group">
                <label for="IssueYear">Data wydania:</label><br />
                <label>@Model.IssueYear.Date.ToString("yyyy/MM/dd")</label>
            </div>
        </fieldset>
    </form>
</body>
</html>

